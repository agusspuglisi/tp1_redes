[flake8]
# PEP8 Configuration
max-line-length = 120
ignore = 
    E203,  # Whitespace before ':' (allowed in some cases)
    W503,  # Line break before binary operator (allowed by PEP8)
    E266,  # Too many leading '#' for block comment
exclude = 
    .git,
    __pycache__,
    venv,
    migrations,
    scripts,
    docs
per-file-ignores =
    # Allow * imports in __init__.py
    __init__.py: F403,F401